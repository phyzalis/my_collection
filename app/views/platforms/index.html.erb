<p id="notice"><%= notice %></p>

<h1>Listing Platforms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.name %></td>
        <td><%= link_to 'Show', platform, class: "button small" %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform), class: "button small" %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' }, class: "button small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform', new_platform_path, class: "button" %>
